// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("MAMAO_DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  uuid      String      @id @default(uuid())
  username  String      @unique
  email     String      @unique
  password  String
  description String?
  avatar    String?
  posts     Post[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  comment   Comment[]
  following User[]      @relation("UserFollows", references: [uuid])
  followedBy User[]     @relation("UserFollows", references: [uuid])
}

model Post {
  uuid      String      @id @default(uuid())
  text      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  author    User        @relation(fields: [authorUuid], references: [uuid])
  authorUuid String
  comments  Comment[]
}

model Comment {
  uuid      String      @id @default(uuid())
  text      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  post      Post        @relation(fields: [postUuid], references: [uuid])
  postUuid  String
  user      User        @relation(fields: [userUuid], references: [uuid])
  userUuid  String
}
