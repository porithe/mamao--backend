// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("MAMAO_DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  uuid      String      @id @default(uuid())
  username  String      @unique
  email     String      @unique
  password  String
  description String?
  avatar    String?
  posts     Post[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  comments   Comment[]
  followers Follows[]   @relation("follower")
  following Follows[]   @relation("following")
  likes      Like[]
}

model Follows {
  follower      User @relation("follower", fields: [followerUuid], references: [uuid])
  followerUuid  String
  following     User @relation("following", fields: [followingUuid], references: [uuid])
  followingUuid String

  @@id([followerUuid, followingUuid])
}

model Post {
  uuid      String      @id @default(uuid())
  text      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  author    User        @relation(fields: [authorUuid], references: [uuid])
  authorUuid String
  comments  Comment[]
  likes     Like[]
}

model Like {
  uuid      String      @id @default(uuid())
  post      Post        @relation(fields: [postUuid], references: [uuid])
  postUuid  String
  user      User        @relation(fields: [userUuid], references: [uuid])
  userUuid  String
}

model Comment {
  uuid      String      @id @default(uuid())
  text      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  post      Post        @relation(fields: [postUuid], references: [uuid])
  postUuid  String
  user      User        @relation(fields: [userUuid], references: [uuid])
  userUuid  String
}
